package chapter8_problem1;

public class Area {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		/* Write a class that has three overloaded static methods for calculating the areas of the
		 * following geometric shapes: circles, rectangles, cylinders, 
		 * 
		 */

		final double PI = Math.PI;
		//protected double radius;
		double width;
		double length;
		
		static public double calcArea(double radius){
			//for a circle
			return double(PI * radius);
			
		}
		
		//private double radius;
		
	}

}
