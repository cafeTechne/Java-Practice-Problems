package chapter8_problem1;

public class Area {
	
	
	final static double PI = Math.PI;
	
	public double calcArea(double radius){
		//circle 
		return PI * radius;
		
	}

	public double calcArea(double radius, double height ){
		
		return PI * radius * height;
		
	}

	public double calcArea(float length, float width){
		//calculating the area of a rectangle
		return length * width;
		
	}


}
